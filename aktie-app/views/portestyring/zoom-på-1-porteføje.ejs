  const nu = new Date();
  const dato = nu.toISOString().split('T')[0];
  const tid = nu.toTimeString().split(' ')[0];
  const id = næsteId++;

  const indsendelse = {
    id,
    konto,
    dato,
    tid,
    værdi,
