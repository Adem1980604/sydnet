async function visPortfolioGraf() {
    const ctx = document.getElementById('accountChart').getContext('2d');

    const nu = new Date();
    const månedLabels = [];
    const værdier = [];

    // Vi laver 5 måneder med dummy data men sidste måned har rigtig total værdi
    let base = <%= totalVaerdi %> * 0.5;   // sikrer positivt udgangspunkt
    for (let i = 5; i >= 1; i--) {
      const dato = new Date(nu.getFullYear(), nu.getMonth() - i, 1);
      månedLabels.push(dato.toLocaleDateString('da-DK', { month: 'short', year: 'numeric' }));

      // Tilføj en stigende dummy-værdi
      værdier.push(base);
      base += Math.floor(Math.random() * 1500); // Små stigninger
    }

    // Tilføjer den aktuelle måned med rigtig værdi
    const aktuelMåned = nu.toLocaleDateString('da-DK', { month: 'short', year: 'numeric' });
    månedLabels.push(aktuelMåned);
    værdier.push(<%= totalVaerdi %>);

    // Opsæt data og konfiguration
    const data = {
      labels: månedLabels,
      datasets: [{
        label: "Porteføljeværdi",
        data: værdier,
        borderColor: '#7c4dff',
        backgroundColor: 'rgba(124, 77, 255, 0.2)',
        fill: true,
        tension: 0.4,
        borderWidth: 2
      }]
    };

    const config = {
      type: 'line',
      data: data,
      options: {
        responsive: true,
        maintainAspectRatio: false,
        plugins: {
          legend: {
            labels: { color: '#ffffff' }
          },
          tooltip: {
            callbacks: {
              title: function (tooltipItems) {
                return tooltipItems[0].label; // måned og år vises som tooltip
              }
            }
          }
        },
        scales: {
          x: {
            ticks: {
              color: '#ffffff'
            },
            grid: {
              color: 'rgba(255, 255, 255, 0.1)'
            }
          },
          y: {
            ticks: {
              color: '#ffffff',
              callback: function (value) {
                return value.toLocaleString('da-DK') + " DKK";
              }
            },
            grid: {
              color: 'rgba(255, 255, 255, 0.1)'
            },
            title: {
              display: true,
              text: "Værdi (DKK)",
              color: '#ffffff'
            }
          }
        }
      }
    };

    new Chart(ctx, config);
  }

  visPortfolioGraf();


