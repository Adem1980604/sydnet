          if (e.antal > 0) {
            let pris = 0;
        
            for (let j = 0; j < handler.length; j++) {
              if (handler[j].symbol === e.symbol) {
                pris = handler[j].pris;
                break;
              }
            }
        
            totalVaerdi += e.antal * pris;
          }
        }        
